{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "paths": {
      "@components/*": ["components/*"],
      "@api/*": ["api/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@redux/*": ["redux/*"],
      "@route/*": ["route/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@context/*": ["context/*"],
      "@schema/*": ["schema/*"],
      "@typings": ["types/index"],
      "@services/*": ["services/*"],
      "@/*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/", "config.ts", "env.d.ts", "src/globals.d.ts", ".tsx"]
}
